{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/webserv", // Pfad zu Ihrem ausführbaren Programm
            "args": ["webserv.conf"], // Optional: Argumente für Ihr Programm
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Arbeitsverzeichnis
            "environment": [], // Optional: Umgebungsvariablen
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
