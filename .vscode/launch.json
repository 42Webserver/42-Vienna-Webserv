{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Webserver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server", // Path to the PmergeMe executable
            "args": [""], // Command line arguments to pass to PmergeMe
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
